@model ProductViewModel

<h3>Editar Produto</h3>

<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="EditProduct" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="form-group col-md-6" style="padding-top: 10px">
                        <img src="@Model.Image" />
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" asp-format="{0:N2}" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoriaId" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                </div>
            </div>

            <div class="form-group" style="padding-top: 10px">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-info">Retornar</a>
            </div>
        </form>
    </div>
</div>
